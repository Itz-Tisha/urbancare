@model List<urbancare_final.Models.Problem>
<link rel="stylesheet" href="~/css/viewallcomplaintsbyuser.css" />
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Your Complaints</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Statement</th>
            <th>Type</th>
            <th>Date Submitted</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Statement</td>
                <td>@item.ProblemType</td>
                <td>@item.DateSubmitted.ToShortDateString()</td>
                <td>@item.DepartmentMaster?.Name</td>
                <td>

                    <a asp-controller="User" asp-action="ViewResolution" asp-route-id="@item.Id" class="btn btn-primary">
                        View Resolution
                    </a>
                    @* <a asp-controller="User" asp-action="Delete_Problem" asp-route-id="@item.Id" class="btn btn-primary">
                        Delete Problem
                    </a> *@
                    <a asp-action="EditComplaint" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-controller="User"
                       asp-action="Delete_Problem"
                       asp-route-id="@item.Id"
                       class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this complaint?');">
                        Delete Problem
                    </a>
                   

                </td>
            </tr>
        }
    </tbody>
</table>
