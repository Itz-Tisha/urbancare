


@model urbancare_final.ViewModels.HomeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
  




<section class="intro-split">
    <div class="intro-image">
        <img src="https://images.unsplash.com/photo-1469474968028-56623f02e42e?q=80&w=1200&auto=format&fit=crop" alt="UrbanCare citizen services" />
    </div>
    <div class="intro-content">
        <div class="intro-eyebrow">Built for Smart Cities</div>
        <h1>Resolve civic issues faster with <span class="grad-text">UrbanCare</span></h1>
        <p class="intro-lead">Submit requests in minutes, track SLAs, and stay informed with real-time updates — all from one modern portal.</p>
        <ul class="intro-points">
            <li><span class="check"></span> 2-minute request submission</li>
            <li><span class="check"></span> Live status and instant notifications</li>
            <li><span class="check"></span> Smart routing to the right department</li>
        </ul>
        <div class="trust-row">
            <div class="trust-item"><strong>12k+</strong><span>Active citizens</span></div>
            <div class="trust-item"><strong>850+</strong><span>Requests resolved</span></div>
            <div class="trust-item"><strong>24/7</strong><span>Support</span></div>
        </div>
        <div class="intro-actions">
           
         
            <a href="/Home/ViewProfile" class="btn btn-ghost">View Profile</a>
        </div>
    </div>
</section>

<section id="features" class="features-section">
    <h2>Features</h2>
    <div class="feature-cards">
        <div class="feature-card">
            <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?q=80&w=256&auto=format&fit=crop" alt="Profile" />
            <h3>Profile Management</h3>
            <p>Update your details easily and securely.</p>
        </div>
        <div class="feature-card">
            <img src="https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?q=80&w=256&auto=format&fit=crop" alt="Requests" />
            <h3>Service Requests</h3>
            <p>Raise and track requests quickly.</p>
        </div>
        <div class="feature-card">
            <img src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?q=80&w=256&auto=format&fit=crop" alt="Notifications" />
            <h3>Notifications</h3>
            <p>Get instant updates on all activities.</p>
        </div>
    </div>
</section>



<section class="cta-section">
    <div>
        <h2>Get things done faster with UrbanCare</h2>
        <p class="hero-subtext">Raise service requests, track status, and receive updates—all in one place.</p>
    </div>
   
</section>

<section class="testimonials-section">
    <h2>What citizens say</h2>
    <div class="testimonials">
        <div class="testimonial-card">
            <div class="avatar"></div>
            <div class="content">
                <p>“Submitting a request took less than two minutes and I got updates instantly.”</p>
                <div class="author">— A. Sharma</div>
            </div>
        </div>
        <div class="testimonial-card">
            <div class="avatar"></div>
            <div class="content">
                <p>“The interface is clean and everything I need is easy to find.”</p>
                <div class="author">— R. Kumar</div>
            </div>
        </div>
    </div>
</section>

<section id="about" class="about-section">
    <h2>About Us</h2>
    <p>
        UrbanCare connects citizens with government departments to make service management easy,
        fast, and reliable for everyone.
    </p>
    <ul>
        <li>Unified portal for complaints and resolutions</li>
        <li>Transparent tracking with timely notifications</li>
        <li>Data-driven insights for better civic services</li>
    </ul>

    <div class="media-grid">
        <div class="media-card">
            <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=600&auto=format&fit=crop" alt="Team" />
            <div class="caption">Our team works with departments to resolve issues quickly.</div>
        </div>
        <div class="media-card">
            <img src="https://images.unsplash.com/photo-1487014679447-9f8336841d58?q=80&w=600&auto=format&fit=crop" alt="City" />
            <div class="caption">Built for cities of all sizes.</div>
        </div>
        <div class="media-card">
            <img src="https://images.unsplash.com/photo-1520975922203-b4ea66ec57bb?q=80&w=600&auto=format&fit=crop" alt="Support" />
            <div class="caption">24/7 support to assist citizens and departments.</div>
        </div>
    </div>
</section>

<section id="contact" class="contact-section">
    <h2>Contact</h2>
    <div class="contact-grid">
        <div class="contact-card">
            <p>Email: support@urbancare.com</p>
            <p>Phone: +91 12345 67890</p>
            <p>Address: 221B Baker Street, Mumbai</p>
        </div>
        <div class="contact-map">
            <img src="https://images.unsplash.com/photo-1502920514313-52581002a659?q=80&w=1200&auto=format&fit=crop" alt="Map placeholder" />
        </div>
    </div>
</section>
